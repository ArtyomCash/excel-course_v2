{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
//    "indent": ["error", 2],
//    "indent": "off",
    // тут прописываются правила для Eslint
    // например
    // "semi": "off" - убрать точки с запятыми
    // "arrow-parens": "off" - убрать круглые сскобки со стрелочной функции
    "require-jsdoc": "off", // не писать доки => async function start()
    "object-curly-spacing": "off",
    "linebreak-style": "off",
//    "space-before-function-paren": "off",
   //"max-len": "warn",
    "max-len": ["error", { "code": 120 }]
//    "indent": ["error", "tab"]
//    "spaced-comment": "off"
  },
  "extends": ["eslint:recommended", "google"]
}